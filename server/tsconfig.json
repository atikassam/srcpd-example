{
  "compilerOptions": {
    "lib": [
      "dom",
      "es6"
    ],
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "build",
    "baseUrl": "src",
    "declaration": true,
    "skipLibCheck": false,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
